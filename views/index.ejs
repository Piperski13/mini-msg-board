<html>
  <head>
    <title>Homepage</title>
  </head>
  <body>
    <h2><%- title %></h2>
    <a href="/new">Add new message</a>
    <form action="/delete" method="POST">
      <button type="submit">Delete All Messages</button>
    </form>
    <ul>
      <% messages.forEach(function(message) { %>
      <li>
        <%= message.username %> <br />
        <%= message.text %> <br />
        <%= message.added %><br />
      </li>
      <a href="/messages/<%= message.id %>">Open</a>
      <form action="/delete/<%= message.id %>" method="POST">
        <button type="submit">Delete</button>
      </form>
      <br />
      <br />
      <% }) %>
    </ul>
  </body>
</html>
