<!-- index.ejs -->
<html>
  <head>
    <title>Homepage</title>
  </head>
  <body>
    <h2><%- title %></h2>
    <a href="/new">Add new message</a>
    <ul>
      <% messages.forEach(function(message) { %>
      <li>
        <%= message.user %> <br />
        <%= message.text %> <br />
        <%= message.added %>
      </li>
      <br />
      <% }) %>
    </ul>
  </body>
</html>
